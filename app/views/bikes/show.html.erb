<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @bike.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @bike.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @bike.price %>
</p>

<p>
  <strong>Category:</strong>
  <%= @bike.category_str %>
</p>

<p>
  <strong>Status:</strong>
  <%= @bike.status_sym %>

<p id="notice"><%= notice %></p>

<h1>Listing Bikes</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Available</th>
      <th>Status</th>
      <th>Colour</th>
      <th>Comment</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.type %></td>
        <td><%= bike.available %></td>
        <td><%= bike.status %></td>
        <td><%= bike.colour %></td>
        <td><%= bike.comment %></td>
        <td><%= bike.image %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


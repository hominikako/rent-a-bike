<p id="notice"><%= notice %></p>

<h1>Listing Bikes</h1>

<table class="table  table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Category</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.name %></td>
        <td><%= bike.description %></td>
        <td><%= bike.price %></td>
        <td><%= bike.category %></td>
        <td><%= bike.status %></td>
        <td><%= link_to 'Show', bike, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike),class: 'btn btn-info' %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' },class: 'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path,class: 'btn btn-primary' %>
